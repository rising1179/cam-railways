<% layout('layout', { title: 'Cam - Student' }) %>
<section class="card">
  <h2>生徒ログイン</h2>
  <div class="grid">
    <input id="student_id" placeholder="student_id" />
    <input id="student_pass" type="password" placeholder="student_pass" />
    <button id="login" class="btn primary">ログイン</button>
  </div>
</section>
<section class="card" id="app" style="display:none">
  <h2>申請</h2>
  <div class="grid">
    <select id="subject"></select>
    <button id="apply" class="btn info">申請</button>
  </div>
  <div class="status" id="status">状態: 未申請</div>
</section>
<script src="/public/student.js"></script>
