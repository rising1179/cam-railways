<section class="card">
  <h2>教員ログイン</h2>
  <div class="grid">
    <input id="teacher_id" placeholder="teacher_id" />
    <input id="teacher_pass" type="password" placeholder="teacher_pass" />
    <button id="login" class="btn primary">ログイン</button>
  </div>
</section>

<section class="grid-3" id="panel" style="display:none">
  <!-- 右（固定） -->
  <aside class="card">
    <h3>科目選択</h3>
    <select id="subject"></select>
  </aside>

  <!-- 中央 -->
  <section class="card">
    <h3>申請者一覧</h3>
    <div class="actions">
      <button id="approve" class="btn success">承認</button>
      <button id="reject" class="btn danger">却下</button>
      <button id="detail" class="btn secondary">状況</button>
    </div>
    <table id="pending">
      <thead><tr><th></th><th>class</th><th>student_id</th><th>student_name</th><th>appliedAt</th></tr></thead>
      <tbody></tbody>
    </table>

    <h3 style="margin-top:1rem">承認履歴</h3>
    <div class="scroll">
      <table id="history">
        <thead><tr><th>class</th><th>student_id</th><th>student_name</th><th>承認者</th><th>actedAt</th></tr></thead>
        <tbody></tbody>
      </table>
    </div>
  </section>

  <!-- 右（状況パネル） -->
  <aside class="card" id="statusPanel" style="display:none">
    <h3>状況</h3>
    <div id="studentInfo">student_id - student_name</div>
    <ul id="courseList"></ul>
  </aside>
</section>

<script src="/public/teacher.js"></script>
